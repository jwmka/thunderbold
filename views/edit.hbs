<form class="form" action="/users/{{id}}?_method=PUT" method="post">

<div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title pnl_title">Edit your profile</h3>
            </div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <input value="{{name}}" type="text" name="name" id="name" class="form-control input-sm floatlabel" placeholder="Name">
                    </div>

                    <div class="form-group">
                        <input value="{{email}}" type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
                    </div>

                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input value="{{password}}" type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input value="{{password}}" type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
                            </div>
                        </div>
                    </div>

                    <input type="submit"  class="btn btn-default btn-warning" value="Update"  id="Submit_btn"> <!--class="btn btn-info btn-block"-->
                    <a class="btn btn-default btn-warning" href="/"  id="return_btn"> Return to main</a>
                </form>
            </div>
        </div>
    </div>
</div>

</form>
